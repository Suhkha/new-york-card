body
	background #545454 url('../images/new-york.jpg')
	background-position center center
	background-size cover
	background-attachment fixed
	background-repeat no-repeat
	height 100vh
	position relative
	width 100vw
	
.layer
	background rgba(black, 0.7)
	height 100vh
	position absolute
	width 100vw
	
.card
	position relative
	background transparent url('../images/new-york.jpg')
	background-repeat no-repeat
	border-radius 30px
	background-position center center
	background-size cover
	background-attachment fixed
	height 85vh
	width 48vw
	top 60px
	&__title
		font-size 100px
		font-weight bold 
		position absolute
		bottom 180px
		color white
	&__city
		width 55%	
	&__info
		background white url('../images/statue.jpg')
		background-repeat no-repeat
		background-position bottom
		border-top-right-radius 30px
		height 75vh
		position absolute
		right 0
		width 40%
		&--thumbs
			right 0
			position absolute
			bottom 0
			width 60%
	&__hashtag
		width 60%
		left 0
		position absolute
		bottom 45px
		a
			color white
			margin-left 17px

.thumbs__ny, .view__more
	padding 0
	margin 0
	height 10vh
	float right

.view__more
	background #222629
	color #666769
	font-size 25px
	text-align center
	padding-top 30px
	border-bottom-right-radius 30px